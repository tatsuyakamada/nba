<% @page_title = t('page_action', name: Article.model_name.human) %>
<h1><%= @page_title %></h1>

<%= form_for [:admin, @article] do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
  <table id="form">
    <tr>
      <th><%= f.label :artcile_image %></th>
      <td><%= f.file_field :article_image %></td>
    </tr>
    <tr>
      <th><%= f.label :title %></th>
      <td><%= f.text_area :title, :size=> "60x5" %></td>
    </tr>
    <tr>
      <th><%= f.label :body %></th>
      <td><%= f.text_area :body, :size=> "60x15" %></td>
    </tr>
    <tr>
      <th><%= f.label :released_at %></th>
      <td><%= f.datetime_select :released_at, {
            start_year: Time.current.year,
            end_year: Time.current.year + 1,
            default: Time.zone.today
          }
            %></td>
    </tr>
    <tr>
      <th><%= f.label :expired_at %></th>
      <td><%= f.datetime_select :expired_at, {
            start_year: Time.current.year,
            end_year: Time.current.year + 1,
            default: Time.zone.today + 1.month
          }
            %></td>
    </tr>
    <tr>
      <th><%= f.label :member_only %></th>
      <td><%= f.check_box :member_only, { :checked => true } %></td>
    </tr>
  </table>
  <%= f.hidden_field :member_id, value: current_member.id %>
  <button type=submit><%= '投稿' %></button>
<% end %>
