<% @page_title = "TEAM" %>
<h1><%= @page_title %></h1>

<%= form_for @team do |f| %>
<%= render 'layouts/error_messages', model: f.object %>

<table>
  <tr>
    <th><%= f.label :team_image %></th>
    <td><%= f.file_field :team_image %></td>
  </tr>
  <tr>
    <th><%= f.label :division_id %></th>
    <td><%= f.collection_select(:division_id, @divisions, :id, :division_name) %></td>
  </tr>
  <tr>
    <th><%= f.label :team_name %></th>
    <td><%= f.text_field :team_name %></td>
  </tr>
  <tr>
    <th><%= f.label :establishment %></th>
    <td><%= f.date_select :establishment, {
      start_year: 1900,
      end_year: Time.current.year,
      default: Time.zone.today - 30.year,
      discard_month: true,
      discard_day: true
      } %></td>
  </tr>
  <tr>
    <th><%= f.label :home_court %></th>
    <td><%= f.text_field :home_court %> </td>
  </tr>
  <tr>
    <th><%= f.label :owner %></th>
    <td><%= f.text_field :owner %></td>
  </tr>
  <th><%= f.submit "登録" %></th>
  </table>

<% end %>
