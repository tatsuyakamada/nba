<% @page_title = t('.info') %>
<h1><%= @page_title %></h1>

<%= image_tag @headcoach.headcoach_image.to_s, :size => '200x200' %>
<table>
  <tr>
    <th><%= t('.name') %></th>
    <td><%= @headcoach.full_name %></td>
  </tr>
  <tr>
    <th><%= t('.birthday') %></th>
    <td><%= @headcoach.birthday.strftime("%Y年%m月%d日") %></td>
  </tr>
  <tr>
    <th><%= t('.college') %></th>
    <td><%= @headcoach.college %></td>
  </tr>
</table>
  <button><%= link_to t('.headcoaches'), :headcoaches %></button>
  <% if admin_member %>
    <button><%= link_to t('button.edit'), :edit_headcoach %></button>
  <% end %>
