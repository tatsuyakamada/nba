<% @page_title = "会員詳細" %>
<h1><%= @page_title %></h1>

<table>
  <tr>
    <th>名前</th>
    <td><%= @member.last_name + " " + @member.first_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @member.last_name_call + " " + @member.first_name_call %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>
  <tr>
    <th>誕生日</th>
    <td><%= @member.birthday.strftime("%Y年 %m月 %d日") %></td>
  </tr>
</table>
<div><%= link_to "会員一覧", :members %></div>
