<% @page_title = "会員詳細" %>
<h1><%= @page_title %></h1>

<h2>プロフィール</h2>
<table>
  <tr>
    <th>お名前</th>
    <td><%= @member.full_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= @member.full_name_call %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>
  <tr>
    <th>誕生日</th>
    <td><%= @member.birthday.strftime("%Y年 %m月 %d日") %></td>
  </tr>
  <tr>
  <th>性別</th>
    <% if @member.sex == 0  %>
    <td>男</td>
    <% else %>
    <td>女</td>
    <% end %>
  </tr>
</table>

<div>
  <h2>投稿ブログ</h2>
  <a>投稿件数: <%= posts_count %> 件</a>
  <% @posts.each do |post| %>
  <div>
    <h4 class="post_title"><%= link_to post.title, post %></h4>
    <p class="post_body"><%= simple_format(post.body.truncate(50)) %></p>
  </div>
  <% end %>
</div>



<button type="button"><%= link_to "会員一覧", :members %></button>
<% if logged_in? %>
  <button type="button"><%= link_to "編集", :edit_member %></button>
<% end %>
