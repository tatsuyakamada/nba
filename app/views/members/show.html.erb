<% @page_title = "会員詳細" %>
<h1><%= @page_title %></h1>

<table>
  <tr>
    <th>お名前</th>
    <td><%= full_name %></td>
  </tr>
  <tr>
    <th>フリガナ</th>
    <td><%= full_name_call %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @member.email %></td>
  </tr>
  <tr>
    <th>誕生日</th>
    <td><%= @member.birthday.strftime("%Y年 %m月 %d日") %></td>
  </tr>
  <tr>
  <th>性別</th>
    <% if @member.sex == 0  %>
    <td>男</td>
    <% else %>
    <td>女</td>
    <% end %>
  </td>
  </tr>
</table>

<button type="button"><%= link_to "会員一覧", :members %></button>
<button type="button"><%= link_to "編集", :edit_member %></button>
