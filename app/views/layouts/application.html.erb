<!DOCTYPE html>
<html>
  <head>
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <header>
    <div>
      <nav class="menu">
          <div id="logo">
            <%= link_to image_tag('logo.png', :size=>"76x41"), "/" %>
          </div>
          <div>
            <a><%= link_to "ニュース", :articles %></a>
            <a><%= link_to "ブログ", :posts %></a>
            <a><%= link_to "会員一覧", :members %></a>
          </div>
      </nav>
    </div>
    <div>
      <nav class="member">
        <% if logged_in? %>
        <a><%= link_to current_member.full_name + " さん", current_member %></a>
        <a><%= link_to "ログアウト", "/logout" %></a>
        <% else %>
        <a><%= link_to "新規登録", :new_member %></a>
        <a><%= link_to "ログイン", "/login" %></a>
        <% end %>
      </nav>
    </div>
  </header>

  <body>
    <% if flash[:notice] %>
      <%= flash[:notice] %>
    <% end %>
    <%= yield %>
  </body>
</html>
