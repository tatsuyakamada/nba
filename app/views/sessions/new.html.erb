<% @page_title = 'ログイン' %>
<h1><%= @page_title %></h1>

<div>
  <div>
    <%= form_for(:session, url: login_path) do |form| %>
    <%= form.label :email %>
    <%= form.email_field :email %>
    <%= form.label :password %>
    <%= form.password_field :password %>
    <%= form.submit 'Login' %>
    <% end %>
  </div>
  <div>
    <button type='button'><%= link_to 'Signin', :new_member %></button>
  </div>
</div>
