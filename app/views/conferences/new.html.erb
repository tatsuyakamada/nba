<% @page_title = t('page_action.new', name: Conference.model_name.human) %>
<h2><%= @page_title %></h2>

<%= form_for @conference do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
  <table>
    <tr>
      <th><%= f.label :conference_name %></th>
      <td><%= f.text_field :conference_name %></td>
    </tr>
  </table>
  <button><%= t('button.new') %></button>
<% end %>
