<% @page_title = "記事一覧" %>
<h1><%= @page_title %></h1>

<% @articles.each do |article| %>
<div class="article-index">
  <div class="article-index-image">
    <%= image_tag article.article_image.to_s, :size => '250x250' %>
  </div>
  <div class="article-content">
    <div class="article-title">
      <h4><span><%= link_to article.title, article %></span></h4>
    </div>
    <p><%= simple_format(article.body.truncate(250)) %></p>
  </div>
  <div class="expired">
    <div><a>投稿者  <%= link_to article.member.full_name, article.member %></a></div>
    <a>掲載開始日　<%= article.released_at.strftime("%Y年 %m月 %d日") %></a>
    <a>掲載終了日　<%= article.expired_at.strftime("%Y年 %m月 %d日") %></a>
  </div>

</div>
<% end %>

<button type="button" class="top-btn"><%= link_to "TOP", "/" %></button>
